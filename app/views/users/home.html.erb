<% greeting = ["hello", "hey", "hey there", "greetings", "hi there", "welcome", "play on", "hola", "aloha"] %>
<h1><%= greeting.sample %> <%= current_user.name %></h1>
<p>&nbsp;</p>
<h4>[ your games ]</h4>
<% Game.all.each do |game| %>
<% date = game.created_at.to_s.split('')[0..9].join %>
<% if game.user_id == @user.id %>
<article>
  <h1><a href="/games/<%=game.id%>"><%= game.name %></h1></a>
  <h3><%=game.blurb%></h3>
    <a href="/games/<%=game.id%>">
  <div class="poloroid">
    <div class="leftup"><%= image_tag game.photo %></div></div></a>
  <p class="metadata">Posted on <%= date %> / Likes(<%=game.favorites.count%>)</p>
  <h3><a href="/games/<%=game.id%>/edit" %>Edit Game</a> | <a href="/games/<%=game.id%>/delete" %>Delete Game</a></h3>
</article>
<%end%>
<%end%>
<p>&nbsp;</p>
<h4>[ games you like ]</h4>
<% current_user.favorites.all.each do |favorite| %>
<% game = Game.find_by_id(favorite.game_id) %>
<% date = game.created_at.to_s.split('')[0..9].join %>
<article>
  <h1><a href="/games/<%=game.id%>"><%= game.name %></h1></a>
  <h3><%=game.blurb%></h3>
    <a href="/games/<%=game.id%>">
    <div class="poloroid">
    <div class="leftup"><%= image_tag game.photo %></div></div></a>
  <p class="metadata">Posted on <%= date %> / Likes(<%=game.favorites.count%>)</p>
</article>
    <% end %>